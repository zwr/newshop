.box
  #accordion.panel-group
    .panel.panel-default
      - for i in 1..categories
        .panel-heading
          .panel-title
            %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse#{i}"}
              = "Category #{i}"
        .panel-collapse.collapse.out{:id => "collapse#{i}"}
          .panel-body.category-box
            .list-group
              - for j in 1..items
                %a.list-group-item.category-box{href: "#"} 
                  = "Item #{j}"
