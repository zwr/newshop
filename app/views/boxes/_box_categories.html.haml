#accordion.panel-group
  .panel.panel-default
    - Category.first.child_categories.each do |child_category|
      - if child_category.child_categories.length > 0
        .panel-heading
          .panel-title
            %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse#{child_category.id}"}
              = child_category.name
            %span.badge.category-title-badge #{child_category.child_categories.length}
        .panel-collapse.collapse.out{:id => "collapse#{child_category.id}"}
          .panel-body.category-box-panel
            .list-group.category-box-list
              - child_category.child_categories.each do |child_child_category|
                %a.list-group-item.category-box-item{href: "#"}
                  = child_child_category.name
      - else
        %a.list-group-item.category-box-item{href: "#"}
          %span.badge.category-title-badge #{child_category.products.length}
          = child_category.name
